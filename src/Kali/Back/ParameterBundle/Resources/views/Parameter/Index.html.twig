{% extends "::layout.html.twig" %}

{% block body %}

<h2>Gestion des param√®tres</h2>

    <table class="table">
        <tr style="font-weight: bold;">
            <td>Logo</td>
            <td>Slogan</td>
            <td>Description</td>
            <td>Adresse</td>
            <td>Action</td>
        </tr>

        {% for parameter in parameters %}
        <tr>
            <td><img src="{{ image_url }}" /></td>
            <td>{{ parameter.slogan }}</td>
            <td>{{ parameter.description }}</td>
            <td>{{ parameter.adresse }}</td>
            <td>
