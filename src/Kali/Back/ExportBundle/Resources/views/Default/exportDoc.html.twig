        <label class='col-xs-6 control-labell diag-form' >A partir de : </label>
        <input type="date" name="date_client"/>
        <label class='col-xs-6 control-labell diag-form' >Jusqu'à : </label>
        <input type="date" name="date_fin_client"/>
    </div> 
    <input type ="submit" name = "submit_client" value ="exporter" />
</form>
{% endblock%}

