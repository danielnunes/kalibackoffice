{% extends "::layout.html.twig" %}

{% block title %}Liste des categories{% endblock %}

{% block body %}
    <h2>Liste des catégories</h2>
    <p class="text-right">
        <a class="btn btn-success right" href="{{path("category_plug")}}">Créer une nouvelle catégorie</a>
    </p>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Editer</th>
            <th>Supprimer</th>
        </tr>
        {% for category in categories %}
            <tr>
                <td>{{category.name}}</td>
                <td>{{category.description}}</td>
                <td><a class="btn btn-xs btn-success" href="{{path("category_plug", {id:category.id})}}">éditer</a></td>
                <td><a class="btn btn-xs btn-danger" href="{{path("category_delete", {id:category.id})}}">supprimer</a></td>
            </tr>
        {% endfor %}
    </table>
    <div class="pull-left"><a class="btn btn-primary" href="{{path("product_list")}}">Liste des produits</a></div>

{% endblock %}
