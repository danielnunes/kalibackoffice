{% extends "::layout.html.twig" %}

{% block title %}Categorie de {{product.name}}{% endblock %}

{% block body %}
    {% include"KaliBackBundle:Product:menuProduct.html.twig" with {'id' : product.id} %}
    <h2>Categorie associ√©e au produit : {{product.name}}</h2>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.categories) }}
        <div class="col-sm-10">
            {{ form_widget(form.categories) }}
        </div>
    </div>

    <input type="submit" value="Sauvegarder" class="btn btn-success" />
    {{ form_end(form) }}

{% endblock %}
