{% extends "::layout.html.twig" %}

{% block title %}Fiche produit{% endblock %}

{% block body %}

    {% include "KaliBackProductBundle:Product:navbar.html.twig"  with {'active' : 'info'} %}

    <h2>
        {% if product.name != "" %}
            Fiche du produit {{ product.name }}
        {% else %}
            Cr√©er un produit
        {% endif %}
    </h2>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        <div class="col-sm-4">
            {{ form_widget(form.name) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        <div class="col-sm-4">
            {{ form_widget(form.description) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.price) }}
        <div class="col-sm-4">
            {{ form_widget(form.price) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.lenght) }}
        <div class="col-sm-4">
            {{ form_widget(form.lenght) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.width) }}
        <div class="col-sm-4">
            {{ form_widget(form.width) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.density) }}
        <div class="col-sm-4">
            {{ form_widget(form.density) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.weight) }}
        <div class="col-sm-4">
            {{ form_widget(form.weight) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.stock) }}
        <div class="col-sm-4">
            {{ form_widget(form.stock) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.ecoParticipation) }}
        <div class="col-sm-4">
            {{ form_widget(form.ecoParticipation) }}
        </div>
    </div>


    <input type="submit" value="Sauvegarder" class="btn btn-success"/>
    <a href="#" class="btn btn-info" onclick="history.go(-1)">Retour</a>
    {{ form_end(form) }}

{% endblock %}
