{% extends "::layout.html.twig" %}

{% block title %}Fiche produit{% endblock %}

{% block body %}
    {% if product.name != "" %}
        {% include"KaliBackProductBundle:Product:menuProduct.html.twig" with {'id' : product.id} %}
    {% endif %}
    <h1>
        {% if product.name != "" %}
            Fiche du produit {{product.name}}
        {% else %}
            CrÃ©er un produit
        {% endif %}
    </h1>
    <p class="text-right">
        <a class="btn btn-success right" href="{{path("product_list")}}">Liste des produits</a>
    </p>

    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        <div class="col-sm-10">
            {{ form_widget(form.name) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        <div class="col-sm-10">
            {{ form_widget(form.description) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.price) }}
        <div class="col-sm-10">
            {{ form_widget(form.price) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.lenght) }}
        <div class="col-sm-10">
            {{ form_widget(form.lenght) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.width) }}
        <div class="col-sm-10">
            {{ form_widget(form.width) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.density) }}
        <div class="col-sm-10">
            {{ form_widget(form.density) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.weight) }}
        <div class="col-sm-10">
            {{ form_widget(form.weight) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.stock) }}
        <div class="col-sm-10">
            {{ form_widget(form.stock) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(form.ecoParticipation) }}
        <div class="col-sm-10">
            {{ form_widget(form.ecoParticipation) }}
        </div>
    </div>


    <input type="submit" value="Sauvegarder" class="btn btn-success"/>
    {{ form_end(form) }}

{% endblock %}
